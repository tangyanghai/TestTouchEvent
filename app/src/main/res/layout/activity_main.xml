<?xml version="1.0" encoding="utf-8"?>
<com.tyh.java.testtouchevent.viewgroup.TouchEventViewGroup1 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.tyh.java.testtouchevent.view.TouchEventView1
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/holo_blue_light"
        android:clickable="true"
        android:visibility="visible" />

    <com.tyh.java.testtouchevent.viewgroup.TouchEventViewGroup2
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/holo_red_light"
        android:visibility="visible">

        <com.tyh.java.testtouchevent.view.TouchEventView2
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/holo_green_dark" />
    </com.tyh.java.testtouchevent.viewgroup.TouchEventViewGroup2>

    <Button
        android:text="跳转到RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onJumpToRadioGroupClicked"
        />
</com.tyh.java.testtouchevent.viewgroup.TouchEventViewGroup1>